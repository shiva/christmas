extends layout

block content
  .container
    .centered.ui.huge.header
        = title
    if (!wishlists)
      .centered
      | No wishlists.
    .ui.centered.cards
      each list, index in wishlists
        .ui.card
          a(href=baseurl+'list/'+list._id).image
            img(src=baseurl+'images/profile-pics/'+list.user.toLowerCase()+'.jpg')
          .content
            a(href=baseurl+'list/'+list._id).header= list.name
            .meta= list.items.length+' items'
