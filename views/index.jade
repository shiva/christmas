extends layout

block content
  .ui.container
    .ui.description= 'Click to find out what that person wishes for'

    if (!wishlists)
      | No wishlists.
    .ui.cards
      each list, index in wishlists
        .card
          img(src=list.image_url).ui.tiny.image
          .content
            .right.floated.description
              = list.items.length
            .header
              a(href='/'+list._id)= list.name
